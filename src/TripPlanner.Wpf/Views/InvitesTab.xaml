<UserControl x:Class="TripPlanner.Wpf.Views.InvitesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="8">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Create invite code" Command="{Binding CreateCommand}" />
            <TextBox Width="200" Margin="8,0,0,0" Text="{Binding Code}" IsReadOnly="True"/>
            <Button Content="Join by code" Margin="8,0,0,0" Command="{Binding JoinCommand}"/>
        </StackPanel>
        <TextBlock Foreground="Gray" Text="Create a share code for others, or paste a code to join a trip."/>
    </StackPanel>
</UserControl>