<UserControl x:Class="TripPlanner.Wpf.Views.ParticipantsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    <!-- Simple pill style -->
    <Style x:Key="Pill" TargetType="Border">
      <Setter Property="Background" Value="#FFE8E8E8"/>
      <Setter Property="Padding" Value="6,2"/>
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="Margin" Value="0,0,6,0"/>
      <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    <!-- Row card -->
    <Style x:Key="RowCard" TargetType="Border">
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="8"/>
      <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
      <Setter Property="Margin" Value="0,4,0,4"/>
    </Style>
  </UserControl.Resources>

  <DockPanel Margin="10">
    <!-- Header -->
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding OrganizerDisplay}"
               FontWeight="SemiBold"
               Margin="0,0,0,6"/>

    <!-- Organizer-only: Invite generation -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8"
                Visibility="{Binding IsOrganizerMe, Converter={StaticResource BoolToVis}}">
      <TextBlock Text="New placeholder:" VerticalAlignment="Center" Margin="0,0,8,0"/>
      <TextBox Width="220" Text="{Binding NewPlaceholderName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
      <Button Content="Add" Command="{Binding AddPlaceholderCommand}" />
      <Separator Margin="12,0"/>
      
      <TextBlock Text="Invite code:" VerticalAlignment="Center" Margin="0,0,8,0"/>
      <TextBox Width="220" IsReadOnly="True" Text="{Binding InviteCode}" Margin="0,0,8,0"/>
      <Button Content="Create invite" Command="{Binding CreateInviteCodeCommand}" />
    </StackPanel>

    <!-- Column labels (subtle; no grid lines) -->
    <Grid DockPanel.Dock="Top" Margin="0,0,0,4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="140"/>   <!-- Role / Me -->
        <ColumnDefinition Width="200"/>   <!-- Username -->
        <ColumnDefinition Width="240"/>   <!-- Name (text or inline editor) -->
        <ColumnDefinition Width="Auto"/>  <!-- Actions -->
        <ColumnDefinition Width="40"/>    <!-- ? -->
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" Text="Role" Opacity="0.6"/>
      <TextBlock Grid.Column="1" Text="Username" Opacity="0.6"/>
      <TextBlock Grid.Column="2" Text="Name" Opacity="0.6"/>
      <TextBlock Grid.Column="3" Text="Actions" Opacity="0.6"/>
      <TextBlock Grid.Column="4" Text="" />
    </Grid>

    <!-- List -->
    <ListView ItemsSource="{Binding Items}" BorderThickness="0">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Border Style="{StaticResource RowCard}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
              </Grid.ColumnDefinitions>

              <!-- Column 0: Role + Me -->
              <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Style="{StaticResource Pill}" Background="#FFDDEEFF">
                  <TextBlock Text="{Binding RoleText}" FontSize="11"/>
                </Border>
                <Border Style="{StaticResource Pill}" Background="#FFE4F8E4"
                        Visibility="{Binding IsSelf, Converter={StaticResource BoolToVis}}">
                  <TextBlock Text="Me" FontSize="11"/>
                </Border>
              </StackPanel>

              <!-- Column 1: Username (real users only) -->
              <TextBlock Grid.Column="1"
                         Text="{Binding Username}"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Visibility="{Binding IsRealUser, Converter={StaticResource BoolToVis}}"/>

              <!-- Column 2: Name -->
              <!-- View mode: pure text using NameForView (falls back to Username if DisplayName empty) -->
              <TextBlock Grid.Column="2"
                         Text="{Binding NameForView}"
                         VerticalAlignment="Center">
                <TextBlock.Style>
                  <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding IsEditingName}" Value="True">
                        <Setter Property="Visibility" Value="Collapsed"/>
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </TextBlock.Style>
              </TextBlock>

              <!-- Edit mode: inline editor for DisplayName -->
              <TextBox Grid.Column="2"
                       Text="{Binding EditDisplayName, UpdateSourceTrigger=PropertyChanged}"
                       VerticalAlignment="Center">
                <TextBox.Style>
                  <Style TargetType="TextBox">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding IsEditingName}" Value="True">
                        <Setter Property="Visibility" Value="Visible"/>
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </TextBox.Style>
              </TextBox>

              <!-- Column 3: Actions -->
              <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!-- Edit button (when allowed and not editing) -->
                <Button Content="Edit name" Margin="0,0,8,0">
                  <Button.Style>
                    <Style TargetType="Button">
                      <Setter Property="Visibility" Value="Collapsed"/>
                      <Style.Triggers>
                        <MultiDataTrigger>
                          <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding CanRename}" Value="True"/>
                            <Condition Binding="{Binding IsEditingName}" Value="False"/>
                          </MultiDataTrigger.Conditions>
                          <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Button.Style>
                  <Button.Command>
                    <Binding Path="DataContext.BeginEditNameCommand" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                  </Button.Command>
                  <Button.CommandParameter>
                    <Binding />
                  </Button.CommandParameter>
                </Button>

                <!-- Save / Cancel (editing only) -->
                <Button Content="Save" Margin="0,0,8,0">
                  <Button.Style>
                    <Style TargetType="Button">
                      <Setter Property="Visibility" Value="Collapsed"/>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEditingName}" Value="True">
                          <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Button.Style>
                  <Button.Command>
                    <Binding Path="DataContext.SaveEditNameCommand" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                  </Button.Command>
                  <Button.CommandParameter>
                    <Binding />
                  </Button.CommandParameter>
                </Button>

                <Button Content="Cancel" Margin="0,0,8,0">
                  <Button.Style>
                    <Style TargetType="Button">
                      <Setter Property="Visibility" Value="Collapsed"/>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEditingName}" Value="True">
                          <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Button.Style>
                  <Button.Command>
                    <Binding Path="DataContext.CancelEditNameCommand" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                  </Button.Command>
                  <Button.CommandParameter>
                    <Binding />
                  </Button.CommandParameter>
                </Button>

                <!-- Remove (organizer-only, not self) -->
                <Button Content="Remove"
                        Visibility="{Binding CanRemove, Converter={StaticResource BoolToVis}}"
                        Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"/>
              </StackPanel>

              <!-- Column 4: ? tooltip with GUID -->
              <Border Grid.Column="4" Width="24" Height="24" CornerRadius="12" Background="#FFF0F0F0"
                      HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="?" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Border.ToolTip>
                  <ToolTip Content="{Binding ParticipantId}" />
                </Border.ToolTip>
              </Border>
            </Grid>
          </Border>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </DockPanel>
</UserControl>
