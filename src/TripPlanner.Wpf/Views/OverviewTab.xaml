<UserControl x:Class="TripPlanner.Wpf.Views.OverviewTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Trip name:" FontWeight="SemiBold" Margin="0,0,12,0" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Text="{Binding Name}" IsReadOnly="True" />

        <TextBlock Grid.Row="1" Text="Description:" FontWeight="SemiBold" Margin="0,8,12,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MinHeight="160"/>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Margin="12,0,0,0">
            <Button Content="Save description" Command="{Binding SaveDescriptionCommand}" Margin="0,0,0,8" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox x:Name="FinishedBox" Content="Finished" IsChecked="{Binding IsFinished}" Margin="0,0,12,0"/>
                <Button Content="Apply" Command="{Binding SetFinishedCommand}" CommandParameter="{Binding IsChecked, ElementName=FinishedBox}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>