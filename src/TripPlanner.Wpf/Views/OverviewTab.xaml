<UserControl x:Class="TripPlanner.Wpf.Views.OverviewTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:TripPlanner.Wpf.Converters">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <conv:MarkdownToFlowDocumentConverter x:Key="MdToDoc"/>
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ====================== READ-ONLY VIEW ====================== -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Trip name -->
            <TextBlock Grid.Row="0" Text="{Binding Name}" Style="{StaticResource H1}" />

            <!-- Markdown description preview -->
            <Border Grid.Row="1" Style="{StaticResource Card}">
                <FlowDocumentScrollViewer
                    VerticalScrollBarVisibility="Auto"
                    Document="{Binding Description, Converter={StaticResource MdToDoc}}"
                    />
            </Border>
        </Grid>

        <!-- Bottom-right Edit button (only visible in read-only mode) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0"
                    Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}">
            <Button Content="Edit"
                    MinWidth="96"
                    Command="{Binding EnterEditCommand}" />
        </StackPanel>

        <!-- ====================== EDIT VIEW ====================== -->
        <Grid Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Edit Name -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
                <TextBlock Text="Trip name" FontWeight="SemiBold" />
                <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Edit Description -->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <TextBlock Text="Description (Markdown)" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    Height="260"/>
                <TextBlock Margin="0,6,0,0" Opacity="0.65" FontSize="11"
                           Text="Tip: Use #, ##, ### for headings; - for lists."/>
            </StackPanel>

            <!-- Finished + Save/Cancel -->
            <DockPanel Grid.Row="2" Margin="0,12,0,0">
                <CheckBox DockPanel.Dock="Left"
                          VerticalAlignment="Center"
                          Content="Finished"
                          IsChecked="{Binding EditIsFinished}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" MinWidth="96" Margin="0,0,8,0"
                            Command="{Binding SaveEditCommand}"/>
                    <Button Content="Cancel" MinWidth="96"
                            Command="{Binding CancelEditCommand}"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
