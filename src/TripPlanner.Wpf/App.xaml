<Application x:Class="TripPlanner.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TripPlanner.Wpf.Converters"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:GearProvisioningToTextConverter x:Key="GearProvisioningToTextConverter"/>
        <converters:BooleanWhenEqualsOneConverter x:Key="BooleanWhenEqualsOneConverter"/>
    </Application.Resources>
</Application>